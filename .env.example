# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
# IMPORTANT: In production, use a long random string (at least 32 characters)
# Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production-at-least-32-chars"

# Google OAuth (Optional - for social login)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# NEXT_PUBLIC_GOOGLE_ENABLED="true"

# Square Configuration
# Get these from your Square Developer Dashboard: https://developer.squareup.com
SQUARE_ACCESS_TOKEN=""
SQUARE_APP_ID=""
SQUARE_LOCATION_ID=""
SQUARE_WEBHOOK_SIGNATURE_KEY=""
# Set to "sandbox" for testing, "production" for live
SQUARE_ENVIRONMENT="sandbox"

# ==================== EMAIL CONFIGURATION ====================
# Required for magic link authentication
# The app logs magic links to console in development if not configured

# Email sender address
EMAIL_FROM="noreply@gardenseedtracker.com"

# Option 1: SMTP Server (works with most providers)
# EMAIL_SERVER_HOST="smtp.sendgrid.net"
# EMAIL_SERVER_PORT="587"
# EMAIL_SERVER_USER="apikey"
# EMAIL_SERVER_PASSWORD="your-sendgrid-api-key"

# Option 2: Single connection string (alternative format)
# EMAIL_SERVER="smtp://apikey:your-api-key@smtp.sendgrid.net:587"

# Popular email service examples:
# 
# SendGrid:
#   EMAIL_SERVER_HOST="smtp.sendgrid.net"
#   EMAIL_SERVER_PORT="587"
#   EMAIL_SERVER_USER="apikey"
#   EMAIL_SERVER_PASSWORD="SG.xxxxx"
#
# Resend:
#   EMAIL_SERVER_HOST="smtp.resend.com"
#   EMAIL_SERVER_PORT="465"
#   EMAIL_SERVER_USER="resend"
#   EMAIL_SERVER_PASSWORD="re_xxxxx"
#
# AWS SES:
#   EMAIL_SERVER_HOST="email-smtp.us-east-1.amazonaws.com"
#   EMAIL_SERVER_PORT="587"
#   EMAIL_SERVER_USER="your-smtp-username"
#   EMAIL_SERVER_PASSWORD="your-smtp-password"
#
# Mailgun:
#   EMAIL_SERVER_HOST="smtp.mailgun.org"
#   EMAIL_SERVER_PORT="587"
#   EMAIL_SERVER_USER="postmaster@your-domain.mailgun.org"
#   EMAIL_SERVER_PASSWORD="your-api-key"
